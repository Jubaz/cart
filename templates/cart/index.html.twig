{% extends 'base.html.twig' %}

{% block title %}My cool blog posts{% endblock %}

{% block container %}
    <table style="margin-top: 140px" class="table table-striped table-dark">
        <thead>
        <tr>
            <th scope="col">id</th>
            <th scope="col">Item name</th>
            <th scope="col">Price</th>
            <th scope="col">Action</th>
        </tr>
        </thead>
        <tbody>
            {% for item in items %}
                <tr>
                    <th scope="row">{{ item.id }}</th>
                    <td>{{ item.title }}</td>
                    <td>{{ item.price }}</td>
                    <td><a href="{{ path('addToCart', {'itemId': item.id}) }}">add to cart</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}